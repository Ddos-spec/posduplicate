# Node Environment
NODE_ENV=production

# Server Port
PORT=3000

# Database URL (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://mypos_user:mypos_password@localhost:5432/mypos_db"

# JWT Secret Key (Change this to a strong random string)
JWT_SECRET=change-this-to-a-very-long-random-string-for-production

# CORS Origin (Your frontend domain)
CORS_ORIGIN=https://yourdomain.com
